

<h2>Your Cart</h2>
<a id='hidecart' href=#>Hide Cart</a>
<div id= 'cart-content'>
<table class="table">

   <%= render (cart.line_items) %>
    
    <tr class="total_line">
        <td colspan='2'>Total</td>
        <td class="total_cell"><%=number_to_currency(@cart.total_price) %></td>
    
    </tr>
</table>
</div>

<%=button_to 'Check-out', new_order_path, class:'cart-buttons', method: :get %>
<%=button_to 'Empty cart', @cart, class:'cart-buttons',method: :delete, data:{ confirm: 'Are you sure?' }, remote: true %>
