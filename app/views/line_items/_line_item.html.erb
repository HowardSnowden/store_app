
<% if line_item ==@current_item %>
<tr id= "current_item">
<% else %>
<tr>
<% end %>
        <td><%= line_item.product.productName %></td>
        <td><%= line_item.quantity %></td>
        <td class='item_price'><%=number_to_currency(line_item.total_price)%></td>
         <td><%=button_to '+', line_items_path(product_id: line_item.product.id), remote: true %></td>
         <td><%=button_to '-', line_item, method: :put, remote: true %></td>
        <td><%= button_to 'Remove', line_item, method: :delete, remote:true %></td>
</tr>
