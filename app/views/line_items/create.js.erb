if ($('#cart_view tr').size() < 3){
$('#cart_view').fadeIn().delay(2000).fadeOut();
}
$('#cart_view').html("<%=j render @cart %>");


$('#cart').html("Cart (<%= item_count(@cart) %>)");
$( "#hidecart" ).on( "click", function( event ) {
    event.preventDefault();
    $('#cart_view').hide();
});

$('#current_item').css({'background-color': '#ebebeb'}).
        animate({'background-color':'#c1c1c1'}, 1000);