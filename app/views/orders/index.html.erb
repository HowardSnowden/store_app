<div class='container'>
<h1>Listing orders</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Pay type</th>
      <th>Paid?</th>
     <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.pay_type %></td>
        <td><%=order.card_token %></td>
        <td><%=order.status %></td>
        <td><%= link_to 'View Order', order %></td>
        <td><%= link_to 'Delete Order', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>